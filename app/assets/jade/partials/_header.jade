header.o-header(data-header)
  .o-header__content
    a.o-header__logo.o-logo(href="index.html"): include ../../svg/logo_veneo_new.svg
    small.o-header__badge.t-smallcaps Lubomír Krčmář od r. 1991

    ul.o-shortcuts
      li.o-shortcuts__item
        a.o-shortcuts__link(href="#")
          span.o-shortcuts__icon: include ../../svg/icon_user.svg
          | Můj účet
      li.o-shortcuts__item
        a.o-shortcuts__link(href="#")
          span.o-shortcuts__icon: include ../../svg/icon_cart.svg
          | 2 ks v košíku
      li.o-shortcuts__item--half
        a.o-shortcuts__link.t-caps(href="#") EN
      li.o-shortcuts__item--half
        a.o-shortcuts__link.t-caps(href="#") CZK

    .o-hud.l-inline
      .o-hud__cell.l-inline__cell
        button.m-pages-toggle.o-toggle(type="button", data-toggle="pages--is-active", data-pages)
          span.o-toggle__iconset
            span.o-toggle__icon--passive: include ../../svg/icon_menu.svg
            span.o-toggle__icon--active: include ../../svg/icon_close.svg
          span.o-toggle__textset
            span.o-toggle__text--passive Menu
            span.o-toggle__text--active Zavřít
        nav.o-pages
          ul.o-pages__list
            each link, instance in {"Naše šperky": "product-list.html", "Ruční výroba": "#", "Šperky na zakázku": "#", "Časté otázky": "#", "Kontakty": "#"}
              li.o-pages__item
                a.o-pages__link(href=link)= instance
      .o-hud__cell.l-inline__cell--right
        button.m-search-toggle.o-toggle(type="button", data-toggle="search--is-active", data-search)
          span.o-toggle__textset
            span.o-toggle__text--passive Hledat
            span.o-toggle__text--active Zavřít
          span.o-toggle__iconset
            span.o-toggle__icon--passive: include ../../svg/icon_search.svg
            span.o-toggle__icon--active: include ../../svg/icon_close.svg

  form.o-spotlight
    input.o-spotlight__input(type="search", placeholder="Napiště hledaný výraz")
    button.o-spotlight__submit(type="submit"): include ../../svg/arrow_right.svg

button.o-dim(type="button", data-close)
